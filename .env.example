# Environment Configuration
# Copy this file to .env and update values for your environment

# APPLICATION
CI_ENVIRONMENT = development

# BASE URL
# Set your application's base URL here
# Local Development (XAMPP):
app.baseURL = 'http://localhost/HC-Helpdesk/public/'
# 
# Production Server (Apache/Nginx):
# app.baseURL = 'http://your-domain.com/'
# OR with subdirectory:
# app.baseURL = 'http://your-domain.com/HC-Helpdesk/public/'

# DATABASE
database.default.hostname = localhost
database.default.database = 
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi

# REPORT SERVICE CONFIGURATION
# Report Service Base URL - must match your Report-HC_Helpdesk installation
# Local Development:
report.baseURL = 'http://localhost/Report-HC_Helpdesk/public/'
#
# Production Server:
# report.baseURL = 'http://your-domain.com/Report-HC_Helpdesk/public/'

# Report API Key File Path
# Store API key in a separate file for security (not in .env)
# Local Development (Windows - XAMPP):
report.keyPath = 'D:/helpdeskkey/key'
# 
# Production (Linux/Unix):
# report.keyPath = '/var/helpdesk/key'
#
# Production (Windows Server):
# report.keyPath = 'C:\helpdesk\key'


